<div class="wrapper">
	<div id=burgerWrap>
		<img src="https://media.giphy.com/media/ToMjGplHPoYqSg7oACc/giphy.gif" alt="Hamburger" class="burgerPic">
		<img src="https://media.giphy.com/media/ToMjGplHPoYqSg7oACc/giphy.gif" alt="Hamburger" class="burgerPic">
		<img src="https://media.giphy.com/media/ToMjGplHPoYqSg7oACc/giphy.gif" alt="Hamburger" class="burgerPic">
		</div>
		<br>
		
		<h1 id="title">EAT MORE BURGERS!</h1>
		<div id="create-burger">
			<form action="/" method="POST">
				<input id="burger-name" type="text" name="burger_name" placeholder="Create a burger">
				<button id="submit-btn" type="submit">Grill it up!</button>
			</form>
		</div>
	

	<section id="burgers-container">
		<div id="burgers-available">
			<h2>Burgers Available</h2>
			{{#each burgers}}
			{{#unless this.devoured}}
			<div class="burger">
				<form class="devour-burger-form" action="/{{id}}?_method=PUT" method="POST">
					<button class="eat-btn">Consume!</button>
				</form>
				{{burger_name}} <span>#{{id}}</span>
			</div>
			{{/unless}}
			{{/each}}
		</div>
		<div id="burgers-devoured">
			<h2>Mass Quantities Consumed</h2>
			{{#each burgers}}
			{{#if this.devoured}}
			<div class="burger">{{burger_name}} <span>#{{id}}</span></div>
			{{/if}}
			{{/each}}
		</div>
	</section>
</div>